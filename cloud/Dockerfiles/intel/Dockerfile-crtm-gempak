ARG REPO
FROM ${REPO}/esmf-intel:latest
MAINTAINER Daniel Abdi <daniel.abdi@noaa.gov>


RUN dnf update -y && \
    dnf --enablerepo=powertools install -y lapack-devel && \
    dnf install -y --enablerepo=powertools \
        redhat-lsb-core \
        curl-devel \
        blas-devel \
        libpng-devel \
        bzip2-devel \
        openmotif \
        openmotif-devel \
        libX11-devel  \
        libXt-devel  \
        libXext-devel  \
        libXp  \
        libXp-devel \
        libXft  \
        libXtst  \
        cairo \
        cairo-devel \
        pixman-devel \
        xorg-x11-xbitmaps  \
        libaec-devel \
        zlib-devel \
        boost-devel \
        curl \
        zip \
        unzip \
        bzip2 \
        file \
        flex  \
        byacc  \
        python3-devel \
    && rm -rf /var/lib/apt/lists/*

COPY patches/nceplibs/crtm.diff /opt/patches/nceplibs/crtm.diff
COPY scripts/build_crtm_gempak.sh /opt
